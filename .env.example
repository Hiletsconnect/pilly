# ── Dispositivos (ESP32) ───────────────────────────────────
# Clave que el ESP32 manda en el header X-API-Key
API_SECRET_KEY=genera-una-clave-larga-y-random-aqui

# ── Login del panel ────────────────────────────────────────
# Se usa SOLO para crear el admin inicial si la tabla `users` está vacía.
# Luego podés cambiar la contraseña desde MySQL (tabla users) si querés.
ADMIN_USER=admin
ADMIN_PASS=cambia-esto
SESSION_SECRET=cambia-esto-en-produccion-super-secreto

# ── MySQL ──────────────────────────────────────────────────
DB_HOST=mysql.railway.internal
DB_PORT=3306
DB_USER=root
DB_PASS=pon-tu-password
DB_NAME=pilly

# ── Telegram ───────────────────────────────────────────────
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ── Otros ──────────────────────────────────────────────────
DEBUG=false
FIRMWARE_DIR=firmware
DATA_DIR=/data
